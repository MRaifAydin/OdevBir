@model List<OrderDetailViewModel>




<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Product</th>
            <th scope="col">UnitPrice</th>
            <th scope="col">Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Product.Name</td>
                <td>@item.UnitPrice</td>
                <td>@item.Quantity</td>
            </tr>
        }
    </tbody>
</table>